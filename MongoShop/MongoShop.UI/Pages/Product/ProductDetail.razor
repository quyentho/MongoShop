@page "/Product/Detail/{id}"
@inherits ProductDetailBase
<h3>Detail Product</h3>

@if (Product is null)
{
    <h3>Loading...</h3>
}
else
{
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-md-3 col-form-label" for="text-input">Product Name</label>
                    <div class="col-md-9">
                        <input class="form-control" id="text-input" value="@Product.Name" type="text" name="text-input" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 col-form-label" for="text-input">Product Price</label>
                    <div class="input-group col-md-9">
                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="text" class="form-control" value="@Product.Price" aria-label="Amount (to the nearest dollar)" readonly>
                        <div class="input-group-append">
                            <span class="input-group-text">.00</span>
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 col-form-label" for="text-input">Stock Quantity</label>
                    <div class="col-md-9">
                        <input class="form-control" id="text-input" value="@Product.StockQuantity" type="text" name="text-input" placeholder="Enter Quantity" readonly>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 col-form-label" for="select1">Size</label>
                    <div class="col-md-9">
                        <select value="@Product.Size" disabled class="form-control" id="select1" name="select1">
                            <option value="0">Please select</option>
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                            <option value="XXL">XXL</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-3 col-form-label" for="select2">Category</label>
                    <div class="col-md-9">
                        <input class="form-control" id="text-input" value="@Product.Category?.Name" type="text" name="text-input" readonly>
                    </div>
                </div>

                <div class="form-group form-action">
                    <a href="/Product/Edit/@Product.Id" class="btn btn-outline-warning">Edit</a>
                    <a href="/Product/Delete/@Product.Id" class="btn btn-outline-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <a class="btn btn-primary" href="/products">Back To List</a>
    </div>
}

