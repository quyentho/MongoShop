@{
    ViewData["Title"] = "Product Detail";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@using MongoShop.Areas.Admin.ViewModels.Product;
@using MongoShop.Areas.Admin.ViewModels.Category;
@model DetailProductViewModel

<div class="row">
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Product</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.Name)</label>
                    <label class="form-control">@Html.DisplayFor(model => model.Name)</label>
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.Category)</label>
                    <label class="form-control">@Html.DisplayFor(model => model.Category)</label>
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.Price)</label>
                    <label class="form-control">@Html.DisplayFor(model => model.Price)</label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.StockQuantity)</label>
                    <label class="form-control">@Html.DisplayFor(model => model.StockQuantity)</label>
                </div>
                <div class="form-group">
                    <label>@Html.DisplayNameFor(model => model.Size)</label>
                    <label class="form-control">@Html.DisplayFor(model => model.Size)</label>
                </div>
            </div>

            <!-- /.card-body -->
        </div>
     
        <!-- /.card -->
        <div class="col-12">
            <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to list</a>
            <a href="@Url.Action("Edit", "Product", new { id = Model.Id})" class="btn btn-primary float-right">Edit this product</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card-body">
            @foreach (var item in Model.Images)
            {
                <img src="@Html.DisplayFor(model => item)" alt="..." class="img-thumbnail">
                @*<img src=@Html.DisplayFor(model => item) width="45%" />*@
            }
        </div>
    </div>
</div>
