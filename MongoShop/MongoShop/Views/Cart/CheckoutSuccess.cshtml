@{
    Layout = "~/Views/Shared/CustomerTemplate/_Layout.cshtml";
}
@using MongoShop.BusinessDomain.Orders;
@model Order;


<h1 style="text-align:center">CHECKOUT THÀNH CÔNG</h1>

<!-- Shopping Cart Section Begin -->
<section class="checkout-section spad">
    <div class="container">
        <form asp-action="PlaceOrder" asp-controller="Cart" method="post" id="checkout_form" class="checkout-form">
            <div class="row">
                <div class="col-lg-6">
                    @*<div class="checkout-content">
                        <a href="#" class="content-btn">Click Here To Login</a>
                    </div>*@
                    <h4>Biiling Details</h4>
                    <div class="row">
                        @*<div class="col-lg-6">
                            <label for="fir">First Name<span>*</span></label>
                            <input type="text" id="fir">
                        </div>
                        <div class="col-lg-6">
                            <label for="last">Last Name<span>*</span></label>
                            <input type="text" id="last">
                        </div>
                        <div class="col-lg-12">
                            <label for="cun-name">Company Name</label>
                            <input type="text" id="cun-name">
                        </div>*@
                        <div class="col-lg-12">
                            <label for="cun">Created At<span>*</span></label>
                            <input value="@Model.CreatedTime" type="text" id="cun" readonly>
                        </div>
                        <div class="col-lg-12">
                            <label for="street">Street Address<span>*</span></label>
                            <input value="@Model.ShipAddress.Street" type="text" id="street" class="street-first" readonly>
                            @* <input type="text"> *@
                        </div>
                        <div class="col-lg-12">
                            <label for="zip">Address Number</label>
                            <input value="@Model.ShipAddress.Number" type="text" id="zip" readonly>
                        </div>
                        <div class="col-lg-12">
                            <label for="town">Town / City<span>*</span></label>
                            <input value="@Model.ShipAddress.City" type="text" id="town" readonly>
                        </div>
                        <div class="col-lg-6">
                            <label for="email">UserID<span>*</span></label>
                            <input value="@Model.UserId" type="text" id="email" readonly>
                        </div>
                        <div class="col-lg-6">
                            <label for="phone">Phone<span>*</span></label>
                            <input value="@Model.PhoneNumber" type="text" id="phone" readonly>
                        </div>
                        @* <div class="col-lg-12">
                                <div class="create-item">
                                    <label for="acc-create">
                                        Create an account?
                                        <input type="checkbox" id="acc-create">
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                            </div> *@
                    </div>
                </div>
                <div class="col-lg-6">
                    @*<div class="checkout-content">
                        <input type="text" placeholder="Enter Your Coupon Code">
                    </div>*@
                    <div class="place-order">
                        <h4>Your Order</h4>
                        <div class="order-total">
                            <ul class="order-table">
                                <li>Product <span>Total</span></li>
                                @foreach (var item in Model.OrderedProducts)
                                {
                                    <li class="fw-normal">@item.Product.Name x @item.OrderedQuantity <span>@String.Format("{0:0,0 vnđ}", @item.Product.Price * @item.OrderedQuantity)</span></li>
                                }
                                @*<input asp-for="Total" type="hidden">*@
                                <li class="fw-normal">Subtotal <span>@String.Format("{0:0,0 vnđ}", @Model.Total)</span></li>
                                <li class="fw-normal">Shipping <span>@String.Format("{0:0,0 vnđ}", @Model.ShipppingFee)</span></li>
                                <li class="total-price">Total <span>@String.Format("{0:0,0 vnđ}", @Model.Total + @Model.ShipppingFee)</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Shopping Cart Section End -->


