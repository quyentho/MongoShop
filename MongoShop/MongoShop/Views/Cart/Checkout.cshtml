<script>

    var orderID;



    paypal.Buttons({
        createOrder: function (data, actions) {
            orderID = data.orderID;
            return fetch('/Cart/PaypalCheckout', {
                method: 'post'
            }).then(function (res) {
                return res.json();
            }).then(function (data) {
                return data.orderID;
            });
        },

        onApprove: function (data, actions) {
            return fetch('/Cart/CheckoutSuccess' + data.orderID, {
                method: 'post'
            }).then(function (res) {
                return actions.order.capture();
            }).then(function (details) {
                if (details.status === "COMPLETED") {
                    alert('Transaction funds captured from ' + details.purchase_units[0].payments.captures[0].id);
                    document.location.href = '/Cart/CheckoutSuccess/' + data.orderID + '/' + details.purchase_units[0].payments.captures[0].id;
                }
            });
        },

        onClick: function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("TempAddress","Cart")",
                data: {
                    AddressNumber: document.getElementById("address-number").value,
                    Street: document.getElementById("street").value,
                    Town: document.getElementById("town").value,
                    Phone: document.getElementById("phone").value
                },
                success: function () {
                }
            })
        },

        onCancel: function (data, actions) {
            document.location.href='/Cart'
        },

        onError: function (err) {
            //alert(err);
            alert(res.json);
        },

        style: {
            shape: 'rect',
            color: 'gold',
            layout: 'horizontal',
            label: 'paypal',
            tagline: true
        },
    }).render('#paypal-button-container');



</script>

