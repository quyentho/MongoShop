@{ 
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@using MongoShop.Models.Admin;
@model ProductViewModel

<form role="form">
    <div class="card-body">
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Id)</label>
            <input type="text" class="form-control" value=@Html.DisplayFor(model => model.Id)>
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Name)</label>
            <input type="text" class="form-control" value=@Html.DisplayFor(model => model.Name)>
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.Price)</label>
            <input type="text" class="form-control" value=@String.Format("{0:c}", Model.Price)>
        </div>
        <div class="form-group">
            <label>@Html.DisplayNameFor(model => model.StockQuantity)</label>
            <input type="text" class="form-control" value=@Html.DisplayFor(model => model.StockQuantity)>
        </div>
        <div>
            <label>Status</label>
            <div>
            </div>
        </div>

        <div class="form-group">
            <label for="exampleInputFile">Image Upload</label>
            <div class="input-group">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="exampleInputFile" multiple>
                    <label class="custom-file-label" for="exampleInputFile">@Html.DisplayFor(model => model.Images)</label>
                </div>
            </div>
        </div>

    </div>
    <!-- /.card-body -->

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
