<script type="text/javascript">
        function AddToCart(productId) {
            var selectedSize;
            
            if($('label.active').text() != ""){
                selectedSize = $('label.active').text();
                $.post("@Url.Action("Add", "Cart")", { productId: productId, size: selectedSize})
                .done(function () {
                    alert("product added to your cart");
                });
                console.log(selectedSize);
            }else{
                alert("Mời chọn size");
            }
        };
</script>

