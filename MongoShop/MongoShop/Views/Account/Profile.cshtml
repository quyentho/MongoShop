@model MongoShop.Models.Account.AccountProfileViewModel

@{
    Layout = "~/Views/Shared/CustomerTemplate/_Layout.cshtml";
}

<div class="row">
    <div class="col-8">
        <form asp-controller="Account" asp-action="Profile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(m=>m.Email)</label>
                <input type="email" asp-for="Email" class="form-control" disabled >
                <input type="hidden" asp-for="Email" class="form-control" >
            </div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(m => m.Name)</label>
                <input asp-for="Name" class="form-control" >
            </div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(m => m.AddressNumber)</label>
                <input asp-for="AddressNumber" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(m => m.Street)</label>
                <input asp-for="Street" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(m => m.City)</label>
                <input asp-for="City" class="form-control" >
            </div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(m => m.BirthDay)</label>
                <input data-inputmask="'alias': 'date'" asp-for="BirthDay" class="form-control" data-date-format="mm/dd/yyyy" data-provide="datepicker">
            </div>
            <div class="form-group col-md-6">
                <label>@Html.DisplayNameFor(m => m.PhoneNumber)</label>
                <input asp-for="PhoneNumber" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <input type="submit" class="form-control btn btn-success" />
            </div>
        </form>
    </div>
</div>